{{! This is the post loop - each post will be output using this markup }}
<div id="posts">
{{#foreach posts}}
<article class="{{post_class}} post" id="posts">
    <div class="post-header"><br/></div>
    <div class="post-content">
        <center>
            <h2><h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
        </center>
        <hr>
        <small>
          <p class="date">
            <span class="ion-calendar"></span>
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD YYYY"}}</time>
          </p>
        </small>
        <div class="post-body post-excerpt">
            <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
        </div>
        <footer class="post-meta">
            {{> "tags"}}
        </footer>
    </div>
</article>
{{/foreach}}
</div>

{{! Previous/next page links - displayed on every page }}
<div class="text-center">{{pagination}}</div>
